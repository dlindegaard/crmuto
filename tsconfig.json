{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // out should be the same files but as js in dist folder
    "outDir": "public/js"
  },
  "build": {
    "clean": true
  },
  "include": [
    "src/**/*"
  ]
}